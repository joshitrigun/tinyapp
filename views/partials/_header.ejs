<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav" style="display: block; margin-left: 51%">
        <% if(user) { %>
        <p>Login as: <%= user.email %></p>
        <form method="POST" action="/logout">
          <button class="btn btn-primary type="submit">Logout</button>
        </form>
        <% } else { %>
        <a href="/login">
            <button class="btn btn-primary type="submit">Login</button>
        </a>
         <a href="/register">
            <button class="btn btn-primary type="submit">Register</button>
        </a>
        <% } %>
      </div>
    </div>
  </nav>
</header>
